{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/dts",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["ES5", "ES2015", "ES2016", "DOM", "ESNext"],
    "types": ["node"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "paths": {
      "@trigger.dev/sdk/*": ["../trigger-sdk/src/*"],
      "@trigger.dev/sdk": ["../trigger-sdk/src/index"]
    }
  },
  "include": ["./src/**/*.ts"]
}
